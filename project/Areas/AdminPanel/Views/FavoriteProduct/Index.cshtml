@using OganiShoppingProject.ViewModel

@using OganiShoppingProject.Models.MaintoMain
@model PaginationVM<FavoriteProduct>
@{
    int count = 1;
}
<div class="col-lg-9 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Ən Sevimli Məhsullar</h4>

            <a asp-controller="FavoriteProduct" asp-action="Create" type="button" class="btn btn-info">Yeni Məhsul</a>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Sıra Nömrəsi</th>
                            <th>Şəkil</th>
                            <th>Məhsul adı</th>
                            <th>Mövcud Olması</th>
                            <th>Qiymət</th>
                            <th>Ölçüsü</th>
                            <th>Mətn</th>
                            <th>Növü</th>

                            <th>Settings</th>

                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>@(count++)</td>
                                <td class="py-1">
                                    <img src="~/Assets/img/@item.Image" alt="image" />
                                </td>
                                <td>@item.Name</td>
                                <td>@item.InStock</td>
                                <td>@item.Price</td>
                                <td>
                                    @foreach (SizeofFavoriteProduct size in item.SizeofFavoriteProducts)
                                    {
                                        <p>
                                            @size.Sizes.Name
                                        </p>
                                    }

                                </td>
                                <td class="py-1">
                                    @item.Decs
                                </td>

                                <td>@item.Category.Name</td>
                                <td>
                                    <a asp-controller="FavoriteProduct" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-success"><i class="mdi mdi-lead-pencil"></i></a>
                                    <a asp-controller="FavoriteProduct" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-warning"><i class="mdi mdi-delete"></i></a>

                                </td>
                            </tr>

                        }




                    </tbody>
                </table>
                <div>
                    <nav aria-label="...">

                        <ul class="pagination">
                            @if (Model.CurrentPage != 0)
                            {
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)">Evvelki</a>
                            }
                            @for (int i = 0; i < Model.TotalPage; i++)
                            {
                                <a class="page-link @(i==Model.CurrentPage?"disable": "")" asp-action="Index" asp-route-page="@i">@(i + 1) </a>
                            }
                            @if (Model.CurrentPage + 1 < Model.TotalPage)
                            {
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">sonraki</a>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>