@using OganiShoppingProject.Models
@model Contact

 
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="Assets/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Bizimlə Əlaqə</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="index">Əsas Səhifə</a>
                        <span>Bizimlə Əlaqə</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_phone"></span>
                    <h4>Telefon Nömrəsi</h4>
                    <p>@Model.PhoneNumber</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_pin_alt"></span>
                    <h4>Address</h4>
                    <p>@Model.Address</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_clock_alt"></span>
                    <h4>OpenTime</h4>
                    <p>@Model.OpenTime</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_mail_alt"></span>
                    <h4>Email</h4>
                    <p>@Model.Email</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->
<!-- Map Begin -->
<div class="map">
    <iframe src="@Model.MapAddress"
            height="500" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    <div class="map-inside">
        <i class="icon_pin"></i>
        <div class="inside-widget">
            <h4>@Model.Country</h4>
            <ul>
               
                <li>Add: @Model.Address</li>
            </ul>
        </div>
    </div>
</div>
<!-- Map End -->
<div class="col-lg-12 text-center">

    <a asp-controller="Contact" asp-action="Messagee" type="button" class="btn btn-info">Mesaj gonderin</a>
</div>