@using OganiShoppingProject.Models
@model Message


<!-- Contact Form Begin -->
<div class="contact-form spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact__form__title">
                    <h2>Mesajınız</h2>
                </div>
            </div>
        </div>
        <form method="post">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <input asp-for="Name" type="text" placeholder="adiniz">
                </div>
                <div class="col-lg-6 col-md-6">
                    <input asp-for="Email" type="text" placeholder=" emailiniz">
                </div>
                <div class="col-lg-12 text-center">
                    <textarea asp-for="Yourmessage" placeholder="mesajiniz"></textarea>
                    <button type="submit" class="site-btn">Mesaji gonderin</button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Contact Form End -->