@using OganiShoppingProject.Models
@model List<Basket>




<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="assets/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Səbət</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Əsas Səhifə</a>


                        <span>Səbət</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Məhsullar</th>
                                <th>Qiymət</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="~/Assets/img/@item.Image" alt="">
                                        <h5>@item.Name</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        Azn @item.Price
                                    </td>

                                    <td class="shoping__cart__item__close">

                                        <a asp-controller="Basket" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-warning"><i class="icon_close"></i></a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                        <tfoot>

                            <tr>
                                <td colspan="2">
                                </td>

                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-controller="Shop" asp-action="index" class="primary-btn cart-btn">Alışverişə davam edin</a>

                </div>
            </div>


        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->
