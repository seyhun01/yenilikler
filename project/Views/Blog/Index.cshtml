@using OganiShoppingProject.ViewModel
@model PaginationVM<News>



<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="Assets/img/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Blog</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="Index">Əsas Səhifə</a>
                        <span>Blog</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">

            <div class="col-lg-8 col-md-7">
                <div class="row">
                    @foreach (var item in Model.Items)
                    {
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="blog__item">
                                <div class="blog__item__pic">
                                    <img src="~/Assets/img/@item.Image" alt="">
                                </div>
                                <div class="blog__item__text">
                                    <ul>
                                        <li><i class="fa fa-calendar-o"></i> @item.Time</li>

                                    </ul>
                                    <h5>@item.Title</h5>
                                    <p>
                                        @item.Uptitle
                                    </p>
                                    <a asp-controller="Blog" asp-action="Details" asp-route-Id="@item.Id">OXU <span class="arrow_right"></span></a>
                                </div>
                            </div>
                        </div>
                    }



                    <nav aria-label="...">

                        <ul class="pagination">
                            @if (Model.CurrentPage != 0)
                            {
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage-1)">Evvelki</a>
                            }
                            @for (int i = 0; i < Model.TotalPage; i++)
                            {
                                <a class="page-link @(i==Model.CurrentPage?"disable": "")" asp-action="Index" asp-route-page="@i">@(i + 1) </a>
                            }
                            @if (Model.CurrentPage + 1 < Model.TotalPage)
                            {
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage+1)">sonraki</a>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Section End -->