@using OganiShoppingProject.ViewModel

@model BlogDetailsVM


<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg">
    <img src="~/Assets/img/breadcrumb.jpg" alt="" />
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Məhsul</h2>
                    <div class="breadcrumb__option">
                        <a asp-controller="Home" asp-action="index">Əsas Səhifə</a>
                        <a asp-controller="Shop" asp-action="index">Məhsullar</a>
                        <span>Məhsul</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Product Details Section Begin -->
<section class="product-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="product__details__pic">
                    <div class="product__details__pic__item">
                        <img class="product__details__pic__item--large"
                             src="~/Assets/img/@Model.news.Image" alt="">
                    </div>

                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="product__details__text">
                    <h3>@Model.news.Title</h3>

                    <div class="product__details__price">@Model.news.Time </div>
                    <p>
                        @Model.news.Desc
                    </p>


                </div>
            </div>

        </div>
    </div>
</section>
<!-- Product Details Section End -->
<!-- Related Product Section Begin -->
<section class="related-product">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related__product__title">
                    <h2>Digər Məlumatlar</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.newss)
            {
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <div class="blog__item">
                        <div class="blog__item__pic">
                            <img src="~/Assets/img/@item.Image" alt="">
                        </div>
                        <div class="blog__item__text">
                            <ul>
                                <li><i class="fa fa-calendar-o"></i>@item.Time</li>

                            </ul>
                            <h5><a asp-controller="Blog" asp-action="Details" asp-route-Id="@item.Id">@item.Title</a></h5>
                            <p>@item.Uptitle</p>
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</section>
<!-- Related Product Section End -->