@using OganiShoppingProject.ViewModel.Home
@model HomeVM

<section class="hero">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">

                <div class="hero__item set-bg" data-setbg="Assets/img/@Model.slide.Image">
                    <div class="hero__text">
                        <span>@Model.slide.Title</span>
                        <h2>@Model.slide.Uptitle</h2>
                        <p>@Model.slide.Desc</p>
                        <a asp-controller="Shop" asp-action="Index" class="primary-btn">Alışverişə Başlayın</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Section Begin -->
<section class="featured spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Sevimli Məhsullar</h2>
                </div>
                <div class="featured__controls">
                    <ul>

                        @foreach (var item in Model.category)
                        {
                            <li>


                                <a asp-controller="Home" asp-action="Index" asp-route-CategoryId="@item.Id">@item.Name</a>



                            </li>

                        }


                    </ul>
                </div>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var item in Model.favproduct)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
                    <div class="featured__item">
                        <div class="featured__item__pic set-bg" data-setbg="Assets/img/@item.Image">
                            <ul class="featured__item__pic__hover">

                                <li><a asp-controller="Home" asp-action="BasketDetails" asp-route-Id="@item.Id"><i class="fa fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a asp-controller="Home" asp-action="FavProductDetails" asp-route-Id="@item.Id">@item.Name</a></h6>
                            <h5>@item.Price AZN</h5>
                        </div>
                    </div>
                </div>
            }



        </div>
    </div>
</section>
<!-- Featured Section End -->
